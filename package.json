{
  "name": "clean-architecture-ts",
  "version": "1.0.0",
  "description": "Clean Architecture project with NestJS + TypeScript",
  "author": "Nguyễn Thành Vinh",
  "license": "ISC",
  "private": true,
  "scripts": {
    "nest:build": "nest build",
    "nest": "nest start",
    "nest:dev": "nest start --watch",
    "nest:debug": "nest start --debug --watch",
    "nest:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prisma:pull": "npx prisma db pull",
    "prisma:pull:force": "npx prisma db pull --force",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:migrate:reset": "npx prisma migrate reset --force",
    "prisma:deploy": "npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "prisma:validate": "npx prisma validate",
    "prisma:format": "npx prisma format",
    "prisma:check": "npx prisma validate && npx prisma format --check",
    "prisma:preview": "npx prisma db seed --preview-feature"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
