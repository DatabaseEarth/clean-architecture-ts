    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.11.0",
    "pino-roll": "^3.1.0",
    "reflect-metadata": "^0.2.2",
